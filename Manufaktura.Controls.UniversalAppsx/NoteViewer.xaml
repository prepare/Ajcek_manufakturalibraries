<UserControl
    x:Class="Manufaktura.Controls.UniversalApps.NoteViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Manufaktura.Controls.UniversalApps"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Canvas x:Name="MainCanvas" PointerPressed="MainCanvas_PointerPressed"  PointerReleased="MainCanvas_PointerReleased" PointerMoved="MainCanvas_PointerMoved" UseLayoutRounding="True">
        <Canvas.RenderTransform>
            <ScaleTransform ScaleX="{Binding ZoomFactor, ElementName=noteViewer}" 
                            ScaleY="{Binding ZoomFactor, ElementName=noteViewer}"/>
        </Canvas.RenderTransform>
    </Canvas>
</UserControl>
